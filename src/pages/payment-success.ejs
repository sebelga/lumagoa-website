<!doctype html>
<html lang="en" data-theme="pastel" style="--header-height-mobile: 75px; --header-height-desktop: 102px;">

<%- include('./src/partials/head.ejs', { 
  title: 'Booking Confirmed | LUMA Goa', 
  description: 'Your payment has been successfully processed.',
  extraMeta: '<meta name="robots" content="noindex, nofollow">'
}) %>

<body class="pt-[var(--header-height-mobile)] md:pt-[var(--header-height-desktop)]">
  <%- include('./src/partials/header.ejs') %>

  <main class="min-h-[calc(100vh-var(--header-height-mobile))] md:min-h-[calc(100vh-var(--header-height-desktop))] flex flex-col items-center justify-center p-6 bg-stone-50 text-center">

    <div class="mb-8 relative">
      <div class="w-20 h-20 bg-emerald-50 rounded-full flex items-center justify-center">
        <svg class="w-10 h-10 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7" />
        </svg>
      </div>
      <div class="absolute -inset-2 bg-emerald-100 rounded-full animate-ping opacity-20"></div>
    </div>

    <h1 class="text-xs uppercase tracking-[0.4em] text-stone-400 font-bold mb-4">Payment Received</h1>
    <h2 class="text-4xl md:text-5xl font-display italic text-stone-900 mb-6">Your space in the sun is ready.</h2>

    <div id="countdown-container" class="hidden mb-8">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-stone-100 rounded-full">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-primary"></span>
        </span>
        <span id="countdown-text" class="text-sm uppercase tracking-[0.2em] font-bold text-stone-600"></span>
      </div>
    </div>

    <div class="w-full max-w-md bg-white rounded-3xl shadow-sm border border-stone-100 p-8 md:p-10 mb-10">
      <p class="text-stone-600 mb-8 leading-relaxed">
        Thank you for securing your booking. We have sent a confirmation and a formal receipt to your email address.
      </p>

      <div class="space-y-4 text-sm border-t border-stone-50 pt-8">
        <div class="flex justify-between items-center">
          <span class="text-stone-400 uppercase tracking-widest text-xs font-bold">Reference</span>
          <span class="font-mono font-bold text-stone-800" id="display-ref">...</span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-stone-400 uppercase tracking-widest text-xs font-bold">Payment ID</span>
          <span class="font-mono text-stone-500 text-xs" id="display-pay-id">...</span>
        </div>
      </div>
    </div>

    <div class="flex flex-col items-center space-y-6">
      <a href="/" class="inline-block px-12 py-4 bg-stone-900 text-white rounded-full text-xs uppercase tracking-widest font-bold hover:bg-stone-800 transition-all shadow-lg shadow-stone-900/10">
        Return to LUMA
      </a>
      <p class="text-[10px] uppercase tracking-widest text-stone-400">
        Questions? <a href="https://wa.me/918087723455" class="underline underline-offset-4 hover:text-[#c66f54] transition-colors">Message us on WhatsApp</a>
      </p>
    </div>
  </main>

  <%- include('./src/partials/footer.ejs') %>

  <script>
    // Extract parameters from the URL sent by the Razorpay handler 
    const urlParams = new URLSearchParams(window.location.search);
    const bookingId = urlParams.get('id');
    const paymentId = urlParams.get('payment_id');
    const guestName = urlParams.get('name');
    const arrivalStr = urlParams.get('arrival');

    // Dynamically update the page content
    if (bookingId) {
      document.getElementById('display-ref').textContent = bookingId;
    }
    if (guestName) {
      const headline = document.querySelector('h2');
      headline.innerHTML = `${decodeURIComponent(guestName).split(' ')[0]},<br/>your space in the sun is ready.`;
    }
    if (paymentId) {
      document.getElementById('display-pay-id').textContent = paymentId;
    }
    if (arrivalStr) {
      const arrivalDate = new Date(arrivalStr);
      const today = new Date();

      // Reset hours to compare only calendar days
      today.setHours(0, 0, 0, 0);
      arrivalDate.setHours(0, 0, 0, 0);

      const timeDiff = arrivalDate.getTime() - today.getTime();
      const daysDiff = Math.ceil(timeDiff / (1000 * 3600 * 24));

      const countdownContainer = document.getElementById('countdown-container');
      const countdownText = document.getElementById('countdown-text');

      if (daysDiff > 0) {
        countdownText.textContent = `${daysDiff} days until your arrival`;
        countdownContainer.classList.remove('hidden');
      } else if (daysDiff === 0) {
        countdownText.textContent = `See you today!`;
        countdownContainer.classList.remove('hidden');
      }
    }
  </script>
</body>

</html>